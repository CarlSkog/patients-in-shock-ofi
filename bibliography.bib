	keywords = {Adult, Humans, Trauma Centers, Cause of Death, Diagnostic Errors, Female, Injury Severity Score, Los Angeles, Male, Quality Assurance, Health Care, Registries, Time Factors, Wounds, Nonpenetrating},
	pages = {1338--1346; discussion 1346--1347},
}

