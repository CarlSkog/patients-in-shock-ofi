	number = {7},
	journal = {Archives of Surgery (Chicago, Ill.: 1960)},
	author = {Oyetunji, Tolulope A. and Chang, David C. and Crompton, Joseph G. and Greene, Wendy R. and Efron, David T. and Haut, Elliott R. and Cornwell, Edward E. and Haider, Adil H.},
	month = jul,
