	pmid = {35258641},
	keywords = {Trauma, Adult, Emergency department, Emergency Service, Hospital, Hospital Mortality, Humans, Massive blood transfusion, Mortality, Reproducibility of Results, Shock, Shock index, Trauma Centers},
	pages = {2559--2566},
}

